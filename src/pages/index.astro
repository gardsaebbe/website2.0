---
import Link from "../components/link.astro";
import H1 from "../components/h1.astro";
import RootLayout from "../layouts/RootLayout.astro";
---

<RootLayout>
  <main class="relative w-full min-h-screen overflow-hidden">
    <!-- Bakgrunnsbilder -->
    <div class="absolute inset-0 -z-10 flex flex-col">
      {
        Array(5)
          .fill(0)
          .map(() => (
            <img
              src="website2.0/background.svg"
              alt="background"
              class="w-full h-1/5 object-cover"
            />
          ))
      }
    </div>

    <!-- Innhold -->
    <div
      class="absolute inset-0 flex flex-col items-center justify-center p-6 sm:p-12 text-center"
    >
      <!-- Navn -->
      <H1
        className="text-4xl sm:text-6xl font-bold mb-6 text-white drop-shadow-lg"
      >
        Gard Sæbbe
      </H1>

      <!-- Profilbilde -->
      <img
        src="website2.0/me.jpg"
        alt="Gard Sæbbe"
        class="w-48 sm:w-64 rounded-full border-4 border-white mb-6 shadow-lg object-cover"
      />

      <!-- Introduksjonstekst -->
      <p
        class="text-white text-lg sm:text-xl max-w-2xl mb-8 px-4 sm:px-0 leading-relaxed"
      >
        Jeg er en kreativ og lærelysten 25-åring fra Bergen med interesser for
        programmering, musikk, aktivitet, kultur og nye utfordringer.
      </p>

      <!-- Lenker -->
      <div class="flex flex-wrap justify-center gap-4">
        <Link href="website2.0/about" variant="secondary">CV</Link>
        <Link href="website2.0/photo-gallery" variant="secondary"
          >Fotogalleri</Link
        >
        <Link href="website2.0/video-gallery" variant="secondary"
          >Videogalleri</Link
        >
      </div>
    </div>
  </main>
</RootLayout>
