---
import Link from "../components/link.astro";
import H1 from "../components/h1.astro";
import RootLayout from "../layouts/RootLayout.astro";
---

<RootLayout>
  <main>
    <div
      class="group relative w-full min-h-dvh flex items-center justify-center"
    >
      <div class="absolute w-full h-dvh -z-10 flex flex-col">
        <img
          src="/website2.0/background.svg"
          alt="background"
          class="w-full h-1/5 object-cover bg-img"
        />
        <img
          src="/website2.0/background.svg"
          alt="background"
          class="w-full h-1/5 object-cover bg-img"
        />
        <img
          src="/website2.0/background.svg"
          alt="background"
          class="w-full h-1/5 object-cover bg-img"
        />
        <img
          src="/website2.0/background.svg"
          alt="background"
          class="w-full h-1/5 object-cover bg-img"
        />
        <img
          src="/website2.0/background.svg"
          alt="background"
          class="w-full h-1/5 object-cover bg-img"
        />
      </div>

      <div
        class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col items-center justify-center z-10"
      >
        <div class="flex items-center gap-4 mb-4">
          <H1>Gard Sæbbe</H1>
        </div>

        <div class="mb-6">
          <img src="/website2.0/me.jpg" alt="pic_of_me" class="w-62" />
        </div>

        <div class="flex items-center gap-4 mb-6">
          <h3 class="text-white text-center">
            Jeg er en kreativ og lærelysten 25-åring fra Bergen med interessere
            for for programmering, musikk, aktivitet, kultur og nye
            utfordringer.
          </h3>
        </div>

        <div class="bg-zinc-900 py-4 rounded-3xl">
          <div class="mb-2 sm:mb-4 flex items-center justify-between">
            <div class="flex items-center gap-4">
              <Link href="/website2.0/about" variant="secondary">CV</Link>
              <Link href="/website2.0/photo-gallery" variant="secondary"
                >Fotogalleri</Link
              >
              <Link href="/website2.0/video-gallery" variant="secondary"
                >Videogalleri</Link
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</RootLayout>
